<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:context="com.example.imadsheriff.droneapp.OrderActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="37dp"
        android:elegantTextHeight="false"
        android:fontFamily="@font/megrim"
        android:text="Welcome to the Drone Delivery App"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="228dp"
        android:text="Port Number"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="IP Address"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.993" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Select Drink"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Need Instructions?"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnInstructions"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Get Instructions"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spnDrinks"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/btnInstructions" />

    <Button
        android:id="@+id/btnCancelOrder"
        android:layout_width="203dp"
        android:layout_height="48dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="6dp"
        android:text="Cancel Current Order"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPlaceOrder" />

    <Button
        android:id="@+id/btnCheckOrder"
        android:layout_width="242dp"
        android:layout_height="39dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="126dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Check current order"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="31dp"
        android:text="Place Order"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckOrder" />

    <EditText
        android:id="@+id/editIP"
        android:layout_width="167dp"
        android:layout_height="33dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/spnDrinks" />

    <EditText
        android:id="@+id/editPortNum"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editIP" />
</android.support.constraint.ConstraintLayout>
